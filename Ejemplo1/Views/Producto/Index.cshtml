@model List<Producto>
@{
    ViewData["Title"] = "Lista de productos";
}
<h1>@ViewData["Title"]</h1>
<button type="button" class="btn btn-success" onclick=" location.href='@Url.Action("Create", "Producto")' ">Nuevo Producto</button>
<p>Esta pagina muestra los productos</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">cantidad</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
               
                <td>@item.IdProducto</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Cantidad</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Delete" asp-route-IdProducto="@item.IdProducto" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                        <a asp-action="Edit" asp-route-IdProducto="@item.IdProducto" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Details" asp-route-IdProducto="@item.IdProducto" class="btn btn-success"><i class="bi bi-eye"></i></a>
                    </div>
                    
                </td>

            </tr>
        }

    </tbody>
</table>